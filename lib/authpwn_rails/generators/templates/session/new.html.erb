<p>This is a sample login form. You should customize it for your users.</p>

<%= form_for User.new, :url => session_path do |f| %>
  <div class="field">
    <%= f.label :email, 'Email Address' %><br />
    <%= f.text_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Log in' %>
  </div>
<% end %>
